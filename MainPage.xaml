<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DentalApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="image.jpeg"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="Clinica stomatologica BUCURIA" />

            <Label
                Text="BUCURIA CLINIC"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Welcome to BUCURIA"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Counts the number of times you smile" />

            <Button
                x:Name="CounterBtn"
                Text="Counts the number of times you smile" 
                SemanticProperties.Hint="Counts the number of times you smile"
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
